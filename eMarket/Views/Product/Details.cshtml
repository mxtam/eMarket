@model eMarket.Models.Product
@{
    ViewData["Title"] = "Деталі " + Model.Name;
}
<div class="container">
    <div class="row" >
        <div class="col-md-6">
            <img style="height:50%" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Photo))" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p>
                <strong>Опис:</strong><br/>
                <label>@Model.Description</label> 
            </p>
            <p>
                <strong>Ціна</strong><br/>
                <label>@Model.Price грн.</label>
            </p>
        </div>
    </div>
</div>