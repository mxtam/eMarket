@model IEnumerable<eMarket.Models.Product>

@{
    ViewData["Title"] = "Каталог товарів";
}

<h1>@ViewData["Title"]</h1>
<a asp-action="Create" asp-controller="Product">Створити новий продукт</a>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12" style="background-color:dimgrey">
                        <div class="card-header text-black">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6" style="background-color:grey">
                        <img style="max-height:150px" src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Photo))" width=100% alt="@item.Name">
                    </div>
                    <div class="col-md-6" style="background-color:grey">
                        <div class="card-body">
                            <p class="card-text"><b>Description: </b>@item.Description</p>
                            <p class="card-text"><b>Price: </b>@item.Price</p>
                            <a asp-action="Details" asp-controller="Product" asp-route-id="@item.Id">Деталі</a>
                            <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Видалити</a>
                            <a asp-action="Update" asp-controller="Product" asp-route-id="@item.Id">Змінити</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>