@model eMarket.Models.Product
@{
    ViewData["Title"] = "Змінити продукт";
}
<div class="container">
    <form asp-action="Update" asp-controller="Product" enctype="multipart/form-data">
        <p>
            <label asp-for="Name"></label><br/>
            <input class="form-control" type="text" asp-for="Name" /><br />
            <span asp-validation-for="Name" /><br />
        </p>
        <p>
            <label asp-for="Description"></label><br />
            <textarea class="form-control" maxlength="255" asp-for="Description"></textarea><br/>
            <span asp-validation-for="Description" /><br />
        </p>
        <p>
            <label asp-for="Photo"></label><br />
            <input class="form-control" type="file" asp-for="Photo" /><br />
            <span asp-validation-for="Photo" /><br />
        </p>
        <p>
            <label  asp-for="Price"></label><br />
            <input class="form-control" type="number" asp-for="Price" /><br />
            <span asp-validation-for="Price" /><br />
        </p>
        <p>
            <input class="btn btn-primary mb-3" type="submit" value="Змінити" /><br />
        </p>
    </form>
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>