@model eMarket.Models.Product

@{
    ViewData["Title"] = "Додати продукт";
}
<div class="row">
    <div class="col-md-8 offset-2 bg-light">
        <form asp-action="Create" asp-controller="Product" enctype="multipart/form-data">
            <p>
                <label asp-for="Name"></label><br/>
                <input class="form-control" type="text" asp-for="Name" /><br />
                <span asp-validation-for="Name" />
            </p>
            <p>
                <label asp-for="Description"></label><br />
                <textarea class="form-control" maxlength="255" asp-for="Description"></textarea><br/>
                <span asp-validation-for="Description" />
            </p>
            <p>
                <label asp-for="Photo"></label><br />
                <input class="form-control" type="file" asp-for="Photo" /><br />
                <span asp-validation-for="Photo" />
            </p>
            <p>
                <label  asp-for="Price"></label><br />
                <input class="form-control" type="number" asp-for="Price" /><br />
                <span asp-validation-for="Price" />
            </p>
            <p>
                <input class="btn btn-dark mb-3" type="submit" value="Створити" /><br />
            </p>
        </form>
    </div>
</div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
