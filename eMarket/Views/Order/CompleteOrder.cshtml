@model eMarket.Models.Order

@{
    ViewData["Title"] = "Оформлення замовлення";
}
<div class="row">
    <div class="col-12 col-md-4 col-lg-4 bg-light">
        <form asp-action="CompleteOrder" asp-controller="Order">
            <p>
                <label asp-for="Name"></label><br />
                <input class="form-control" type="text" asp-for="Name" /><br />
                <span asp-validation-for="Name" />
            </p>
            <p>
                <label asp-for="LastName"></label><br />
                <input class="form-control" type="text" asp-for="LastName" /><br />
                <span asp-validation-for="LastName" />
            </p>
            <p>
                <label asp-for="Phone"></label><br />
                <input class="form-control" type="tel" asp-for="Phone" /><br />
                <span asp-validation-for="Phone" />
            </p>
            <p>
                <label asp-for="Location"></label><br />
                <input class="form-control" type="text" asp-for="Location" /><br />
                <span asp-validation-for="Location" />
            </p>
            <p>
                <label asp-for="PostOffice"></label><br />
                <input class="form-control" type="text" asp-for="PostOffice" /><br />
                <span asp-validation-for="PostOffice" />
            </p>
            <p>
                <input class="btn btn-dark mb-3" type="submit" value="Оформити" /><br />
            </p>
        </form>
    </div>
</div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
